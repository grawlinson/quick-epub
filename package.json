{
  "name": "quick-epub",
  "version": "1.0.0",
  "description": "A promise based generator of EPUB 3.0 books.",
  "main": "./src/quick-epub",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "lint": "esw *.js src --color",
    "lint:watch": "npm run lint -- --watch"
  },
  "keywords": [
    "quick-epub",
    "promise",
    "epub",
    "epub3",
    "epub-generator",
    "generator",
    "books",
    "book"
  ],
  "author": {
    "name": "George Rawlinson",
    "email": "george@rawlinson.net.nz"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grawlinson/quick-epub/issues",
    "email": "george@rawlinson.net.nz"
  },
  "repository": {
    "type": "git",
    "url": "grawlinson/quick-epub"
  },
  "dependencies": {
    "archiver": "1.0.0",
    "bluebird": "3.4.0",
    "fs-extra": "0.30.0",
    "lodash": "4.13.1",
    "node-uuid": "1.4.7",
    "pug": "2.0.0-alpha8",
    "uslug": "1.0.4"
  },
  "devDependencies": {
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.1.3",
    "eslint-plugin-import": "2.2.0",
    "eslint-watch": "3.1.0",
    "validate-commit-msg": "2.12.1"
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "space-before-function-paren": [
        2,
        {
          "anonymous": "always",
          "named": "never"
        }
      ],
      "no-use-before-define": [
        2,
        "nofunc"
      ],
      "comma-dangle": [
        0
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "no-underscore-dangle": [
        0
      ]
    },
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
