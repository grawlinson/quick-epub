{
  "name": "quick-epub",
  "version": "2.0.2",
  "description": "A promise based generator of EPUB 3.0 books.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "precommit": "npm run lint && npm run test",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "test": "cross-env NODE_ENV=test mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register src --recursive",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "nyc npm run test",
    "test:coveralls": "coveralls < ./coverage/lcov.info",
    "lint": "esw *.js src --color",
    "lint:watch": "npm run lint -- --watch"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE.md"
  ],
  "keywords": [
    "quick-epub",
    "promise",
    "epub",
    "epub3",
    "epub-generator",
    "generator",
    "books",
    "book"
  ],
  "author": {
    "name": "George Rawlinson",
    "email": "george@rawlinson.net.nz"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grawlinson/quick-epub/issues",
    "email": "george@rawlinson.net.nz"
  },
  "repository": {
    "type": "git",
    "url": "grawlinson/quick-epub"
  },
  "dependencies": {
    "archiver": "1.3.0",
    "bluebird": "3.5.0",
    "fs-extra": "3.0.1",
    "joi": "10.4.2",
    "lodash.padstart": "4.6.1",
    "pug": "2.0.0-rc.1",
    "uslug": "1.0.4",
    "uuid": "3.0.1"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-istanbul": "4.1.3",
    "babel-preset-env": "1.4.0",
    "babel-preset-stage-2": "6.24.1",
    "chai": "3.5.0",
    "chai-files": "1.4.0",
    "commitizen": "2.9.6",
    "coveralls": "2.13.1",
    "cross-env": "5.0.0",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "3.19.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-node": "4.2.2",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-watch": "3.1.0",
    "husky": "0.13.3",
    "mocha": "3.4.1",
    "nyc": "10.3.2",
    "rimraf": "2.6.1",
    "validate-commit-msg": "2.12.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
